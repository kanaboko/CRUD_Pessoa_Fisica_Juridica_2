@model CRUD_Pessoa_Fisica_Juridica_2.ViewModel.PessoaViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    
    @if (Model.TipoPessoa == CRUD_Pessoa_Fisica_Juridica_2.ViewModel.TipoPessoaViewModel.PessoaFisica)
    {
        <div>
            <h4>PessoaFisica - @Model.PessoaFisica.Nome</h4>
            <h5>Cadastrado em: @Model.DataCadastro.ToString()</h5>
            <hr />
