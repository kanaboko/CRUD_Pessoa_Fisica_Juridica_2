                        </td>
                        <td>
                            @Html.DisplayFor(model => endereco.Bairro)
                        </td>
                        <td>
                            @Html.DisplayFor(model => endereco.Cidade)
                        </td>
                        <td>
                            @Html.DisplayFor(model => endereco.Estado)
                        </td>

                    </tr>

                </table>
            }
        }
        else
        {
            <table class="table">
                <tr>
                    <th>
